syntax on

set tabstop=2
set expandtab
set showcmd
set showmode
set ttyfast
set incsearch

au BufNewFile,BufRead *.json set ft=javascript
au BufNewFile,BufRead *.clj set ft=clojure
au BufNewFile,BufRead *.cljs set ft=clojure
au BufNewFile,BufRead *.module set ft=php
au BufNewFile,BufRead *.install set ft=php
au BufNewFile,BufRead *.mustache set ft=html
au BufNewFile,BufRead *.groovy  set ft=groovy 
au BufNewFile,BufRead *.gradle set ft=groovy 

autocmd FileType php let php_sql_query=1
autocmd FileType php let php_htmlInStrings=1
autocmd FileType php let php_noShortTags=1
autocmd FileType php let php_folding=1
autocmd FileType javascript set omnifunc=javascriptcomplete#CompleteJS
autocmd FileType html set omnifunc=htmlcomplete#CompleteTags
autocmd FileType css set omnifunc=csscomplete#CompleteCSS
autocmd FileType xml set omnifunc=xmlcomplete#CompleteTags
autocmd FileType php set omnifunc=phpcomplete#CompletePHP
autocmd FileType c set omnifunc=ccomplete#Complete

execute pathogen#infect()

filetype plugin on
filetype plugin indent on

set encoding=utf-8

set nu                  " enumera as linhas
set ruler               " mostra a posicao do cursor
set title               " mostra o nome do arquivo na barra de titulo
set t_vb=               " desabilita o alerta sonoro (chato)
set termencoding=utf8   " define todos os arquivos ocmo UTF-8
set nobackup            " nao grava os arquivos ~* de backup
set fdm=marker          " habilita o folding

set bs=2                " mexe com o backspace mas nao lembro o que faz
set sm                  " colore chaves/parenteses casados
set ai cindent sw=4     " configura a identacao
set is ic               " configura a busca
set et st=4 ts=4        " configura o TAB
retab                   " substitui os TAB's por espacos
map <C-B> :!php -l %<CR>
imap <Nul> <C-X><C-O>
imap <C-Nul> <C-X><C-O>
noremap L f$ 
noremap H F$

set backspace=indent,eol,start 

inoremap <F1> <ESC>
nnoremap <F1> <ESC>
vnoremap <F1> <ESC>

imap ( ()<esc>i " autocompleta parenteses, chaves, colchetes, aspas
inoremap ( ()<esc>i
inoremap { {}<esc>i
inoremap [ []<esc>i
inoremap " ""<esc>i
inoremap ' ''<esc>i

" abas
map <C-T> :tabe .<CR>
map <C-left> :tabp<CR>
map <C-right> :tabn<CR>
map <C-h> :tabp<CR>
map <C-l> :tabn<CR>

map gf :tabn <cfile><CR>

" Janelas
map <C-W><C-V> :vnew .<CR><C-W>R
map <A-left> <C-w>h
map <A-right> <C-w>l
map <A-down> <C-w>j
map <A-up> <C-w>k

" atalho para embaralhar letras quando alguem estiver olhando
map <F8> ggVGg?

" atalho para retirar ^M do final das linhas
map <> :%s///g<CR>

" aliases uteis para fechar o vim
cab W w| cab Q q| cab Wq wq| cab wQ wq| cab WQ wq| cab X x| cab Wqw wq| cab wqw wq

map tt :CommandT<CR>
au FocusLost * :wa
