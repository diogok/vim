unlet! skip_defaults_vim
source $VIMRUNTIME/defaults.vim
set nu

packadd! fzf
packadd! fzf.vim
packloadall

set rtp+=/usr/bin/fzf
nnoremap <C-p> :GFiles<Cr>
nnoremap <C-g> :Rg<Cr>

nnoremap <leader>n :NERDTreeFocus<CR>
nnoremap <C-n> :NERDTree<CR>
nnoremap <C-t> :NERDTreeToggle<CR>
nnoremap <C-f> :NERDTreeFind<CR>

map <C-T> :tabe .<CR>
map <C-left> :tabp<CR>
map <C-right> :tabn<CR>
map <C-h> :tabp<CR>
map <C-l> :tabn<CR>

imap ( ()<esc>i
inoremap ( ()<esc>i
inoremap { {}<esc>i
inoremap [ []<esc>i
inoremap " ""<esc>i
inoremap ' ''<esc>i


set expandtab
retab


